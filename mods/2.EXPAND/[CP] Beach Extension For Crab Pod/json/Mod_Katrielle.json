{



    "Changes": [



//■■■Katrielle the Glitch NPC - Custom NPC インストール時■■■



    //●移動用ボートの追加
      {
        "Action": "EditMap",
        "Target": "Maps/Beach",
        "FromFile": "assets/Ts_BeachExtension(Katrielle)_Boat.tmx",
        "PatchMode": "Overlay",
        "ToArea": { "X": 15, "Y": 37, "Width": 4, "Height": 3 },
      },

    //●マップポトレ追加(ライト、デイ、ナイト)
      {
        "Action": "EditMap",
        "Target": "Maps/Beach",
        "TextOperations": [
            {
              "Operation": "Append",
              "Target": ["MapProperties", "DayTiles"],
              "Value": "AlwaysFront 52 38 369",
              "Delimiter": " "
            },
            {
              "Operation": "Append",
              "Target": ["MapProperties", "Light"],
              "Value": "52 38 4",
              "Delimiter": " "
            },
            {
              "Operation": "Append",
              "Target": ["MapProperties", "NightTiles"],
              "Value": "AlwaysFront 52 38 368",
              "Delimiter": " "
            }
        ]
      },

    //●エリア追加 足場"有り"
      {
        "Action": "EditMap",
        "Target": "Maps/Beach",
        "FromFile": "assets/Ts_BeachExtension_CS.tmx",
        "FromArea": { "X": 0, "Y": 0, "Width": 24, "Height": 11 },
        "ToArea": { "X": 47, "Y": 37, "Width": 24, "Height": 11 },
        "PatchMode": "Overlay",
        "When": {
            "ScaffoldPattern": "CenterScaffold"
        }
      },

    //●エリア追加 足場"無し"
      {
        "Action": "EditMap",
        "Target": "Maps/Beach",
        "FromFile": "assets/Ts_BeachExtension_N-CS.tmx",
        "FromArea": { "X": 0, "Y": 0, "Width": 24, "Height": 11 },
        "ToArea": { "X": 47, "Y": 37, "Width": 24, "Height": 11 },
        "PatchMode": "Overlay",
        "When": {
            "ScaffoldPattern": "No_CenterScaffold"
        }
      },

    //●ModConfig設定でタイドプール解放で右上から通れるように
      {
        "Action": "EditMap",
        "Target": "Maps/Beach",
        "FromFile": "assets/Ts_BeachExtension(Katrielle)_BridgePassage.tmx",
        "ToArea": { "X": 70, "Y": 38, "Width": 2, "Height": 3 },
        "PatchMode": "Overlay",
        "When": {
            "Mod_Katrielle_BridgePassage": "true",
            "HasFlag": "beachBridgeFixed"
        },
        "Update": "OnTimeChange"
      }



    ]//▼▼"Changes"の終了▼▼
}
